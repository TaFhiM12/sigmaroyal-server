model Project {
  id              String   @id @default(cuid())
  title           String
  slug            String   @unique

  sector          Sector
  client          String
  companyRole     String
  location        String

  capacity        String?     // e.g. "150 MMSCFD", "126 MW", "30 inch Pipeline"
  duration        String?     // e.g. "1 Year", "6 Months"
  year            Int?

  scopeOfWork     String
  description     String?

  status          ProjectStatus @default(COMPLETED)
  featured        Boolean       @default(false)

  images          ProjectImage[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
