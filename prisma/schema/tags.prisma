model Tag {
  id   String @id @default(uuid())
  name String @unique

  projects ProjectTag[]
}

model ProjectTag {
  projectId String
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)

  tagId String
  tag   Tag @relation(fields: [tagId], references: [id], onDelete: Cascade)

  @@id([projectId, tagId])
  @@index([tagId])
}
