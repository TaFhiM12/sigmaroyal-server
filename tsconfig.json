{
  "compilerOptions": {
    "module": "ESNext",                               
    "rootDir": "./src",
    "outDir": "./dist",  
    "moduleResolution": "bundler",
    "target": "ES2023",
    "strict": true,
    "esModuleInterop": true,
    // "ignoreDeprecations": "6.0",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "./generated/prisma"
  ]
}